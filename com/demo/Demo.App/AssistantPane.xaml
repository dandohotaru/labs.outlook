<UserControl 
    x:Class="Demo.App.Shared.Controls.AssistantPane"  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
    mc:Ignorable="d"  
    d:DesignHeight="500" 
    d:DesignWidth="400"  
    Background="#101010">  

   <!-- styles -->  
   <UserControl.Resources>  
       <Style x:Key="ActionButtonStyle" TargetType="Button">  
           <Setter Property="Background" Value="#0078D7"/>  
           <Setter Property="Foreground" Value="White"/>  
           <Setter Property="Height" Value="32"/>  
           <Setter Property="Width" Value="32"/>  
           <Setter Property="Padding" Value="5"/>  
           <Setter Property="Margin" Value="0,0,15,0"/>  
           <Setter Property="BorderBrush" Value="#505050"/>  
           <Setter Property="BorderThickness" Value="1"/>  
           <Setter Property="FontSize" Value="20"/>  
           <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>  
           <Setter Property="HorizontalAlignment" Value="Center"/>  
           <Setter Property="VerticalAlignment" Value="Center"/>  

           <Setter Property="Template">  
               <Setter.Value>  
                   <ControlTemplate TargetType="Button">  
                       <Border   
                           Background="{TemplateBinding Background}"  
                           BorderBrush="{TemplateBinding BorderBrush}"  
                           BorderThickness="{TemplateBinding BorderThickness}"  
                           CornerRadius="3"  
                           Padding="{TemplateBinding Padding}">  
                           <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>  
                       </Border>  
                   </ControlTemplate>  
               </Setter.Value>  
           </Setter>  

           <Style.Triggers>  
               <Trigger Property="IsMouseOver" Value="True">  
                   <Setter Property="Background" Value="#0062A1"/>  
               </Trigger>  
               <Trigger Property="IsPressed" Value="True">  
                   <Setter Property="Background" Value="#4CAF50"/>  
               </Trigger>  
           </Style.Triggers>  
       </Style>  

       <Style x:Key="OptionButtonBaseStyle" TargetType="Button">  
           <Setter Property="Background" Value="Transparent"/>  
           <Setter Property="Foreground" Value="White"/>  
           <Setter Property="Height" Value="50"/>  
           <Setter Property="Padding" Value="10"/>  
           <Setter Property="Margin" Value="5"/>  
           <Setter Property="FontSize" Value="14"/>  
           <Setter Property="FontFamily" Value="Segoe UI"/>  
           <Setter Property="HorizontalAlignment" Value="Stretch"/>  
           <Setter Property="VerticalAlignment" Value="Center"/>  
       </Style>  

       <Style x:Key="OptionButtonStyle" TargetType="Button" BasedOn="{StaticResource OptionButtonBaseStyle}">  
           <Style.Triggers>  
               <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2C77B8"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>  
               <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3C9F70"/>  
               </Trigger>  
           </Style.Triggers>  
       </Style>  
   </UserControl.Resources>  

   <!-- layout -->  
   <Grid Background="#101010">  
       <Grid.RowDefinitions>  
           <RowDefinition Height="50"/>  
           <RowDefinition Height="*"/>  
           <RowDefinition Height="Auto"/>  
       </Grid.RowDefinitions>  

       <!-- header -->  
        <Border Background="#303030"
                Padding="10"
                Grid.Row="0">
            <TextBlock
                Text="🧠 AI Assistant"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"/>
        </Border>

        <!-- response -->  
        <Border 
            BorderBrush="#505050"
            BorderThickness="1"
            CornerRadius="5"
            Background="#252525"
            Margin="10"
            Grid.Row="1">
            <TextBox
                x:Name="ResponseTextBlock"
                FontSize="14"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                VerticalAlignment="Stretch"  
                HorizontalAlignment="Stretch"
                Padding="5"
                IsReadOnly="True"
                Background="#252525"
                Foreground="White"
                BorderThickness="0"/>
        </Border>

        <!-- input -->  
       <StackPanel Grid.Row="2" Margin="0,10,0,0">  
           <!-- prompt -->  
           <Border BorderBrush="#505050" BorderThickness="1" CornerRadius="5" Background="#151515">  
               <TextBox   
                   x:Name="PromptTextBox"   
                   FontSize="14"   
                   Padding="10"  
                   Margin="10"
                   Height="100"  
                   TextWrapping="Wrap"  
                   AcceptsReturn="True"  
                   VerticalScrollBarVisibility="Auto"  
                   Background="#151515"  
                   Foreground="White"  
                   BorderThickness="0"
                   PreviewKeyDown="PromptTextBox_KeyDown"/>  
           </Border>  

           <!-- actions -->  
           <Grid HorizontalAlignment="Stretch" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- left -->
                <StackPanel   
                   Grid.Column="0"   
                   Orientation="Horizontal"   
                   HorizontalAlignment="Left">

                    <!-- copy -->
                    <Button
                        ToolTip="Copy to clipboard"
                        Style="{StaticResource ActionButtonStyle}"   
                        Click="CopyButton_Click">
                        <Button.Content>
                            <TextBlock Text="&#xE8C8;" />
                        </Button.Content>
                    </Button>

                    <!-- accept -->
                    <Button
                       ToolTip="Accept proposal"
                       Style="{StaticResource ActionButtonStyle}"   
                       Click="AcceptButton_Click">
                        <Button.Content>
                            <TextBlock Text="&#xE8FB;" />
                        </Button.Content>
                    </Button>
                </StackPanel>

                <!-- suggestions -->  
               <Button   
                   ToolTip="Prompt suggestions"
                   Grid.Column="2"   
                   Style="{StaticResource ActionButtonStyle}"   
                   Click="SuggestionsButton_Click">  
                   <Button.Content>  
                       <TextBlock Text="&#xE736;" />  
                   </Button.Content>  
               </Button>  

               <Popup x:Name="OptionsPopup"   
                    Placement="Bottom"   
                    PlacementTarget="{Binding ElementName=DropdownButton}"   
                    StaysOpen="False">  
                   <Border Background="#333333" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">  
                       <StackPanel>  
                           <ItemsControl ItemsSource="{Binding Suggestions}">  
                               <ItemsControl.ItemTemplate>  
                                   <DataTemplate>  
                                       <!-- option -->  
                                       <Button 
                                           Style="{StaticResource OptionButtonStyle}"   
                                           Height="50"   
                                           Click="SuggestionOption_Click">  
                                           <Button.Content>  
                                               <StackPanel Orientation="Horizontal" Margin="5">  
                                                   <!-- icon -->  
                                                   <TextBlock   
                                                       Text="&#xE734;"   
                                                       FontFamily="Segoe MDL2 Assets"   
                                                       VerticalAlignment="Center"   
                                                       Margin="5,0"/>  
                                                   <!-- text -->  
                                                   <TextBlock   
                                                       Text="{Binding}"   
                                                       VerticalAlignment="Center"   
                                                       FontFamily="Segoe UI"   
                                                       HorizontalAlignment="Left"  
                                                       TextAlignment="Left"/>  
                                               </StackPanel>  
                                           </Button.Content>  
                                       </Button>  
                                   </DataTemplate>  
                               </ItemsControl.ItemTemplate>  
                           </ItemsControl>  
                       </StackPanel>  
                   </Border>  
               </Popup>  

               <!-- send -->  
               <Button   
                   ToolTip="Send request"
                   Grid.Column="3"   
                   Style="{StaticResource ActionButtonStyle}"   
                   Click="SendButton_Click">  
                   <Button.Content>
                        <TextBlock Text="&#xE724;" />  
                   </Button.Content>  
               </Button>  

           </Grid>  

       </StackPanel>  

   </Grid>  

</UserControl>
