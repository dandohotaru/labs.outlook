<UserControl
    x:Class="Demo.App.SummaryPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#202020">

    <!-- styles -->
    <UserControl.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="BorderBrush" Value="#505050"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border   
                        Background="{TemplateBinding Background}"  
                        BorderBrush="{TemplateBinding BorderBrush}"  
                        BorderThickness="{TemplateBinding BorderThickness}"  
                        CornerRadius="5"  
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0062A1"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- grid -->
    <Grid Background="#202020">

        <!-- rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- header -->
        <Border Background="#303030"
                Padding="10"
                Grid.Row="0">
            <TextBlock
                Text="🧠 AI Summary"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"/>
        </Border>

        <!-- content -->
        <Grid Grid.Row="1" Margin="10">

            <!-- rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- summary -->
            <Border BorderBrush="#505050"
                    BorderThickness="1"
                    CornerRadius="5"
                    Background="#252525"
                    Padding="2"
                    Grid.Row="1">
                <TextBox
                    x:Name="SummaryTextBox"
                    FontSize="14"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    VerticalScrollBarVisibility="Auto"
                    Padding="5"
                    IsReadOnly="True"
                    Background="#252525"
                    Foreground="White"
                    BorderThickness="0"/>
            </Border>
        </Grid>

        <!-- buttons -->
        <Grid Grid.Row="2" HorizontalAlignment="Stretch" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- stack -->
            <StackPanel   
                Grid.Column="1"   
                Orientation="Horizontal"   
                HorizontalAlignment="Right">

                <!-- copy -->
                <Button   
                    Style="{StaticResource ActionButtonStyle}"   
                    Click="CopyButton_Click">
                    <Button.Content>
                        <TextBlock Text="&#xE8C8;" />
                    </Button.Content>
                </Button>

                <!-- close -->
                <Button   
                    Style="{StaticResource ActionButtonStyle}"   
                    Click="CloseButton_Click">
                    <Button.Content>
                        <TextBlock Text="&#xE8BB;" />
                    </Button.Content>
                </Button>
            </StackPanel>

            <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">

                <Button Click="CopyButton_Click"
                        Padding="10"
                        Margin="5"
                        Background="#505050"
                        Foreground="White">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Copy" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Click="CloseButton_Click"
                        Padding="10"
                        Margin="5"
                        Background="#D32F2F"
                        Foreground="White">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="❌" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Close" FontSize="14"/>
                    </StackPanel>
                </Button>

            </StackPanel>-->
        </Grid>

    </Grid>
</UserControl>
