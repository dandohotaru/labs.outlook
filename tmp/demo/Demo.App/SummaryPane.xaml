<UserControl 
    x:Class="Demo.App.SummaryPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="350" 
    Width="500"
    Background="#202020">

    <Grid Background="#202020">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- header -->
        <Border Background="#303030" Padding="10" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock 
                    Text="🧠 AI Summary" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- content -->
        <StackPanel Margin="10,10,10,10" Grid.Row="1">

            <!-- title -->
            <TextBlock 
                Text="Generated Summary:" 
                FontSize="14" 
                FontWeight="Bold" 
                Foreground="White" Margin="0,0,0,5"/>

            <!-- summary -->
            <Border BorderBrush="#505050" BorderThickness="1" CornerRadius="5">
                <TextBox 
                    x:Name="SummaryTextBox"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto"
                    MinHeight="150"
                    MaxHeight="200"
                    Padding="5"
                    IsReadOnly="True"
                    Background="#252525" 
                    Foreground="White"/>
            </Border>

            <!-- buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">

                <!-- copy -->
                <Button 
                    Click="CopyButton_Click" 
                    Padding="10" 
                    Margin="5"
                    Background="#505050" 
                    Foreground="White">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Copy" FontSize="14"/>
                    </StackPanel>
                </Button>

                <!-- close -->
                <Button 
                    Click="CloseButton_Click" 
                    Padding="10" 
                    Margin="5"
                    Background="#D32F2F" 
                    Foreground="White">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="❌" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Close" FontSize="14"/>
                    </StackPanel>
                </Button>

            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
